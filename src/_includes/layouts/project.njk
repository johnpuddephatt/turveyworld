---
layout: /layouts/base.njk
---
<div class="page-content">


  <div class="page-image-container">
    <div class="container">
      {% srcset image.file, image.alt, "post__image", 640, 360, "(min-width: 1120px) 1120px, 100vw", image.crop %}
    </div>
  </div>

  <div class="page-body--outer__project">
    <div class="page-body container container__narrow">
      <h2 class="page-title">{{ title }}</h2>
      {{ content | safe }}
    </div>
  </div>

  {% if project_gallery %}
    <div class="container container__wide page-gallery">
      {% for image in project-gallery %}
        <div class="page-gallery--item">
          {% srcset image.file, image.alt, "post__image", 360, 360, "(min-width: 1120px) 1120px, 100vw", image.crop %}
        </div>
      {% endfor %}
    </div>
  {% endif %}

</div>